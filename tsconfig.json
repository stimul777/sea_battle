// Дока https://habr.com/ru/post/542234/
{
  "include": ["src", "vite.config.*"], //подключить vite config
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    // настройка путей
    "baseUrl": ".",
    "paths": {
    "@/*": [
          "./src/*"
        ]
    },
  },
}
